/**create.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
}

.create-container {
  flex: 1;
  padding: 30rpx;
  background-color: var(--card-bg-color, var(--bg-color));
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
  font-weight: 500;
}

.form-input {
  height: 80rpx;
  border-bottom: 1rpx solid var(--border-color);
  font-size: 28rpx;
  padding: 0 10rpx;
  color: var(--text-color);
}

.type-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid var(--border-color);
  font-size: 28rpx;
  padding: 0 10rpx;
  color: var(--text-color);
}

.arrow-icon {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.template-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.template-item {
  width: 25%;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.template-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--bg-secondary-color, var(--bg-color));
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.template-name {
  font-size: 24rpx;
  color: var(--text-color);
  text-align: center;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.tag-item {
  height: 60rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  color: var(--text-color-inverse, #FFFFFF);
  font-size: 24rpx;
  background-color: var(--tag-color);
}

.tag-item.selected {
  border: 2rpx solid var(--text-color-inverse, #FFFFFF);
  box-shadow: 0 0 0 2rpx var(--tag-color);
}

.add-tag {
  height: 60rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  color: var(--text-secondary-color);
  font-size: 24rpx;
  background-color: var(--bg-secondary-color, var(--bg-color));
}

.plus-icon {
  margin-left: 10rpx;
  font-weight: bold;
}

.create-btn-container {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.create-btn {
  height: 88rpx;
  background-color: var(--primary-color);
  color: var(--text-color-inverse, #fff);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.import-btn {
  height: 88rpx;
  background-color: var(--card-bg-color, var(--bg-color));
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.create-btn[disabled] {
  background-color: var(--disabled-color, #ccc) !important;
  color: var(--text-color-inverse);
}

.create-tip {
  text-align: center;
  font-size: 24rpx;
  color: var(--text-secondary-color);
  margin-top: 30rpx;
}

