    <view class="form-label">文件类型</view>
    <view class="type-selector" bindtap="selectDocumentType">
      <text>{{documentType}}</text>
      <view class="arrow-icon">▼</view>
    </view>
  </view>
  -->
  
  <!-- 模板选择 (暂时移除) -->
  <!-- 
  <view class="form-item">
    <view class="form-label">模板</view>
