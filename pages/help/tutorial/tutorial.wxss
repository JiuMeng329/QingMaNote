/* pages/help/tutorial/tutorial.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
}

#page-root {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  color: var(--text-color);
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  height: calc(100vh - 46px); /* 扣除 navigation-bar 高度 */
}

.tutorial-container {
  padding: 30rpx;
}

/* 教程标题区域 */
.tutorial-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.tutorial-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.tutorial-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

/* 功能列表 */
.features-list {
  background-color: var(--card-bg-color);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.feature-item {
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.feature-description {
  font-size: 28rpx;
  color: var(--text-secondary-color);
  line-height: 1.5;
}

/* 图片展示区域 */
.feature-image {
  width: 100%;
  height: 320rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
  background-size: cover;
  background-position: center;
  background-color: var(--card-bg-color);
}

/* 功能按钮演示 */
.action-buttons {
  display: flex;
  margin-top: 20rpx;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.action-button {
  background-color: var(--primary-color);
  color: #FFFFFF;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  display: inline-flex;
  align-items: center;
}

.action-button .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 演示区域 */
.demo-area {
  border: 1rpx dashed var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: var(--card-bg-color);
} 