.tag-create-container {
  padding: 30rpx;
  background-color: var(--bg-color);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 表单样式 */
.form-item {
  background-color: var(--card-bg-color, var(--bg-color));
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.form-label {
  font-size: 28rpx;
  color: var(--text-secondary-color);
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  color: var(--text-color);
  border-bottom: 1rpx solid var(--border-color);
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  font-size: 32rpx;
  color: var(--text-color);
  line-height: 1.5;
  background-color: transparent;
  border: 1rpx solid var(--border-color);
  padding: 10rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

/* 颜色选择器样式 */
.color-picker {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.color-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 10rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  border: 2rpx solid transparent;
}

.color-item.selected {
  box-shadow: 0 0 0 4rpx var(--bg-color), 0 0 0 6rpx currentColor;
}

.selected-icon {
  color: var(--bg-color);
  font-size: 36rpx;
  font-weight: bold;
}

/* 创建按钮样式 */
.create-btn {
  background-color: var(--primary-color);
  color: #FFFFFF;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(62, 127, 255, 0.3);
}

.create-btn:active {
  opacity: 0.8;
}