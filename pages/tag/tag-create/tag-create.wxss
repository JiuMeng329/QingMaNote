/**tag-create.wxss**/
page {
  background-color: #F6F6F6;
}

.tag-create-container {
  padding: 30rpx;
}

/* 表单样式 */
.form-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 1rpx solid #EEEEEE;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  font-size: 32rpx;
  color: #333333;
  line-height: 1.5;
}

/* 颜色选择器样式 */
.color-picker {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.color-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 10rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.color-item.selected {
  box-shadow: 0 0 0 4rpx #FFFFFF, 0 0 0 6rpx currentColor;
}

.selected-icon {
  color: #FFFFFF;
  font-size: 36rpx;
  font-weight: bold;
}

/* 创建按钮样式 */
.create-btn {
  background-color: #3E7FFF;
  color: #FFFFFF;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 20rpx rgba(62, 127, 255, 0.3);
}