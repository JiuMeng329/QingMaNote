/**tag.wxss**/
#page-root { background-color: var(--bg-color);
  color: var(--text-color);
  min-height: 100vh;
  display: flex;
  flex-direction: column;}
page {height: 100vh;
  display: flex;
  flex-direction: column;
  /* background-color: var(--bg-color); */ }

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--card-bg-color); /* Use variable */
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color); /* Use variable */}


.tag-container {
  padding: 30rpx;
  position: relative;
  min-height: 100%;
}

/* 搜索框样式 (Copy from document.wxss) */
.search-box {
  padding: 0 16rpx; /* Match document page */
  margin-bottom: 24rpx; /* Match document page */
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--card-bg-color); 
  border-radius: 16rpx; /* Match document page */
  padding: 16rpx 24rpx; /* Match document page */
  box-shadow: 0 2rpx 8rpx var(--shadow-color); 
}

.search-input {
  flex: 1;
  margin: 0 16rpx; /* Match document page */
  font-size: 28rpx;
  color: var(--text-color);
  /* Removed fixed height/line-height */
}

/* 标签列表样式 */
.tag-list {
  background-color: var(--card-bg-color); /* Use variable */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color); /* Use variable */
  overflow: hidden;
  margin-bottom: 120rpx; /* 为底部添加按钮留出空间 */
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color); /* Use variable */
}

.tag-item.last {
  border-bottom: none;
}

.tag-color {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.tag-info {
  flex: 1;
}

.tag-name {
  font-size: 32rpx;
  color: var(--text-color); /* Use variable */
  margin-bottom: 8rpx;
  font-weight: 500;
}

.tag-count {
  font-size: 24rpx;
  color: var(--text-secondary-color); /* Use variable */
}

.tag-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}


.action-btn.edit .icon {
  color: var(--primary-color); /* Use variable */
}

.action-btn.delete .icon {
  color: #FF4D4F; /* Keep delete color specific */
}

.icon {
  font-size: 36rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  color: var(--text-secondary-color); /* Use variable */
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-color); /* Use variable */
  margin-bottom: 10rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 28rpx;
  color: var(--text-secondary-color); /* Use variable */
}

/* 添加标签按钮 */
.add-tag-btn {
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color); /* Use variable */
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx var(--shadow-color); /* Use variable with adjusted alpha if needed */
  z-index: 100;
}

.add-icon {
  color: #FFFFFF; /* Keep white color for the plus icon */
  font-size: 60rpx;
  font-weight: 300;
}