#page-root {
  background-color: var(--bg-color);
  color: var(--text-color);
  min-height: 100vh;
}

.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.header {
  margin: 40rpx 0 60rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
  color: var(--text-color);
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

.import-btn {
  width: 80%;
  margin: 0 auto 60rpx;
  border-radius: 16rpx;
  background-color: var(--primary-color);
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.file-card {
  width: 80%;
  margin: 0 auto 40rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  background-color: var(--card-bg-color);
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.file-name {
  font-size: 32rpx;
  display: block;
  margin-bottom: 10rpx;
  word-break: break-all;
  color: var(--text-color);
}

.file-size {
  font-size: 26rpx;
  color: var(--text-secondary-color);
}

.progress-container {
  width: 80%;
  margin: 30rpx auto;
  text-align: center;
}

.progress-text {
  display: block;
  margin-top: 16rpx;
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

.tips {
  margin-top: auto;
  padding-top: 60rpx;
  width: 80%;
  margin: 80rpx auto 0;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: var(--text-secondary-color);
}

.tip-icon {
  margin-right: 16rpx;
  color: var(--primary-color);
  font-weight: bold;
} 