/**favorite.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F6F6F6;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.favorite-container {
  padding: 30rpx;
}

.document-list {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.document-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.document-item:last-child {
  border-bottom: none;
}

.document-info {
  flex: 1;
}

.document-title {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.document-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.update-time {
  font-size: 24rpx;
  color: #999999;
  margin-right: 20rpx;
}

.document-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #3E7FFF;
  background-color: rgba(62, 127, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.document-actions {
  display: flex;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.unfavorite .icon {
  color: #FFB800;
  font-size: 40rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #999999;
}