/* 区块通用样式 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  color: var(--text-color);
}

.view-all, .manage-btn {
  font-size: 28rpx;
  color: var(--primary-color);
}

/* 文档列表样式 */
.document-list {
  background-color: var(--card-bg-color);
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
  overflow: hidden;
}

.document-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.document-item.last {
  border-bottom: none;
}

.document-info {
  flex: 1;
}

.document-title {
  font-size: 32rpx;
  color: var(--text-color);
  margin-bottom: 10rpx;
  font-weight: 500;
}

.document-meta {
  display: flex;
  align-items: center;
}

.update-time {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.document-icon {
  margin-left: 20rpx;
}

.doc-icon {
  width: 40rpx;
  height: 40rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

/* 文件夹网格样式 */
.folder-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.folder-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.folder-icon {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
  position: relative;
  overflow: hidden;
}

.folder-icon::before {
  content: '';
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>');
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
  opacity: 0.8;
}

.folder-name {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 5rpx;
  font-weight: 500;
}

.folder-count {
  font-size: 24rpx;
  color: var(--text-secondary-color);
}

.add-folder {
}

.add-folder-icon {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: var(--card-bg-color);
  border: 1rpx dashed var(--border-color);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
  position: relative;
}

.add-folder-icon::before {
  content: '+';
  font-size: 80rpx;
  color: var(--text-secondary-color);
  font-weight: 300;
}

/* 创建新文档按钮 */
.create-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx var(--shadow-color);
  z-index: 100;
}

.create-icon {
  color: #FFFFFF;
  font-size: 60rpx;
  font-weight: 300;
  line-height: 1;
}

/* Search Box Styles (Copied from document.wxss) */
.search-box {
  padding: 0 16rpx; 
  margin-bottom: 24rpx; 
}

/* Specific margin for index page */
.index-search-box {
  margin-top: 16rpx; /* Add some top margin */
  padding: 0 24rpx; /* Adjust padding to match container */
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--card-bg-color);
  border-radius: 16rpx; 
  padding: 16rpx 24rpx; 
  box-shadow: 0 2rpx 8rpx var(--shadow-color);
}

.search-input {
  flex: 1;
  margin: 0 16rpx; 
  font-size: 28rpx;
  color: var(--text-color);
}

/* Ensure icons within the search wrapper are vertically aligned */
.search-input-wrapper icon {
  display: flex;
  align-items: center;
}
