/**index.wxss**/
#page-root {
  /* Explicitly apply theme variables to the root container */
  background-color: var(--bg-color);
  color: var(--text-color);
  min-height: 100vh; /* Ensure it covers the full height */
  display: flex; /* Maintain flex structure if needed */
  flex-direction: column; /* Maintain flex structure if needed */
}

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* background-color: var(--bg-color); /* Let #page-root handle it */
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.index-container {
  padding: 30rpx;
}

/* 顶部标题和操作区 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.app-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-color);
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}

